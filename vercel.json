{
    "buildCommand": "vite build",
    "outputDirectory": "dist",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(sitemap.xml|robots.txt|favicon.ico)",
            "destination": "/$1"
        },
        {
            "source": "/((?!api/|sitemap.xml|robots.txt|favicon.ico).*)",
            "destination": "/index.html"
        }
    ]
}