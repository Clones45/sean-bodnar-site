# Application
VITE_APP_NAME=v8 App Template
VITE_PUBLIC_URL=http://localhost:5173
VITE_API_URL=http://localhost:3000/api

# Server
NODE_ENV=development
PORT=3000

# Features
VITE_ENABLE_SOURCE_MAPPING=true
VITE_ENABLE_SSR=true

# Development Tools
VITE_SHOW_DEV_TOOLS=false

# Database (when needed)
# DATABASE_URL=postgresql://user:pass@localhost:5432/dbname
DB_HOST=localhost
DB_PORT=3306
DB_USER=user_<random>
DB_PASS=<generated_password>
DB_NAME=<schema_name>

# Email Configuration
CONTACT_EMAIL=sean@sellingwithsean.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_password
SMTP_SECURE=false
SMTP_FROM=noreply@sellingwithsean.com

# External APIs (when needed)
# OPENAI_API_KEY=your-key-here
# ANTHROPIC_API_KEY=your-key-here

# GoDaddy Commerce (when needed)
# Read from /alloc/config.json and GODADDY_API_BASE_URL for storefront components
# VITE_GODADDY_CLIENT_ID=<uuid-from-alloc-config>
# VITE_GODADDY_API_HOST=<hostname-from-GODADDY_API_BASE_URL>

# Authentication (when needed)
# JWT_SECRET=your-secret-here
# SESSION_SECRET=your-secret-here
